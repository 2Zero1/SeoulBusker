<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:background="@drawable/btn_bound"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:background="@android:color/transparent"
            android:text="공연후기를 남겨주세요"
            android:drawableStart="@drawable/group_pen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:text="총"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/actionBar"
            android:id="@+id/group_detail_review_count"
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />

        <TextView
            android:textColor="@android:color/black"
            android:text="개의 후기가 있습니다"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>


    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_group_review_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5">


    </android.support.v7.widget.RecyclerView>
</LinearLayout>